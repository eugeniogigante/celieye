<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nicolagigante.celieye.activity.BasicsTut"
    android:background="@drawable/ic_actionbar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basicstut"
        android:id="@+id/textView"
        android:textStyle="italic"
        android:textSize="28dp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/cart"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carttut"
        android:id="@+id/textView2"
        android:layout_marginLeft="11dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/ic_action_search"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/imageView"
        android:layout_toLeftOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchtut"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/textView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/ic_menu_moreoverflow_mtrl_alpha"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingstut"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/textView3"
        android:textColor="#ffffffff"
        android:layout_alignRight="@+id/textView"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/first"
        android:onClick="stepnext"
        android:text="@string/nextstep"
        android:background="@drawable/next_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nextstep"
        android:textSize="15dp"
        android:gravity="center|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/first"
        android:layout_alignTop="@+id/first"
        android:layout_alignRight="@+id/first" />


</RelativeLayout>
